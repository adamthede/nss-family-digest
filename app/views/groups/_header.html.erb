<div class="bg-indigo-600 rounded-xl shadow-sm overflow-hidden mb-4 sm:mb-8">
  <div class="px-4 sm:px-8 py-4 sm:py-6">
    <div class="flex flex-col">
      <span class="text-xs sm:text-sm text-indigo-100 mb-1 sm:mb-2">Group Overview</span>
      <h1 class="text-xl sm:text-2xl md:text-3xl font-bold mb-3 sm:mb-4 text-white"><%= @group.name %></h1>
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 sm:gap-0">
        <div class="bg-white/20 backdrop-blur-sm rounded-lg px-3 sm:px-4 py-1.5 sm:py-2 text-sm">
          <span class="text-white"><%= pluralize(@group.users.count, 'member') %></span>
        </div>
        <% if current_user == @group.leader %>
          <%= link_to 'Edit Group Name', edit_group_path(@group),
              class: "text-xs sm:text-sm text-white bg-white/20 hover:bg-white/30 px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg transition-colors inline-block w-fit" %>
        <% end %>
      </div>
    </div>
  </div>
</div>