<div class="bg-white border rounded-lg shadow-sm overflow-hidden">
  <div class="p-6">
    <!-- Question content -->
    <div class="flex items-start justify-between">
      <h3 class="text-lg font-medium text-gray-900 mb-2">
        <%= link_to question.question, group_question_path(group, question), class: "hover:text-indigo-600" %>
      </h3>

      <!-- Vote buttons -->
      <%= render 'groups/questions/vote_button_area',
          group: group,
          question: question,
          group_question: group.group_questions.find_or_create_by(question: question) %>
    </div>

    <!-- Metadata section -->
    <div class="mt-2 flex items-center justify-between text-sm">
      <div class="flex items-center space-x-4">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= usage_count > 0 ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-600' %>">
          Asked <%= pluralize(usage_count, 'time') %>
        </span>

        <% if current_user == group.leader %>
          <%= link_to 'Send Now', send_question_path(question, group_id: group.id),
              method: :post,
              class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
        <% end %>
      </div>

      <div class="flex items-center text-gray-500">
        <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
        </svg>
        <span class="question-<%= question.id %>-vote-count">
          <%= group.group_questions.find_by(question: question)&.vote_count || 0 %>
        </span>
        <span class="ml-1">votes</span>
      </div>
    </div>

    <!-- Tags section -->
    <div class="mt-2 flex flex-wrap gap-2">
      <!-- Global Tags -->
      <% question.tags.each do |tag| %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
          <%= tag.name %>
        </span>
      <% end %>

      <!-- Group-specific Tags -->
      <% question.group_question_tags.where(group: group).includes(:tag, :created_by).each do |group_tag| %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800"
              title="Added by <%= group_tag.created_by.email %>">
          <%= group_tag.tag.name %>
        </span>
      <% end %>
    </div>
  </div>
</div>