<div class="flex items-center space-x-2">
  <% if group_question.voted_by?(current_user) %>
    <%= button_to unvote_group_question_path(group, question),
        method: :delete,
        class: "inline-flex items-center p-1.5 text-indigo-600 hover:text-indigo-800 hover:bg-indigo-50 rounded-full",
        form: { data: { turbo: true } } do %>
      <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd" />
      </svg>
    <% end %>
  <% else %>
    <%= button_to vote_group_question_path(group, question),
        method: :post,
        class: "inline-flex items-center p-1.5 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-full",
        form: { data: { turbo: true } } do %>
      <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd" />
      </svg>
    <% end %>
  <% end %>
  <span class="text-sm sm:text-base font-medium text-gray-900 vote-count-<%= group_question.id %>">
    <%= group_question.vote_count %>
  </span>
</div>