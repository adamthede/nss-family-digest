<div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
  <h4 class="text-sm font-semibold mb-3">Add Members</h4>
  <%= form_tag(invite_path, method: 'post', class: "space-y-3") do %>
    <div class="form-inputs">
      <%= label_tag :emails, "Enter emails, separated by commas:", class: "block text-xs font-medium text-gray-700 mb-1" %>
      <%= text_area_tag :emails, nil, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50", rows: 3 %>
      <%= hidden_field_tag :group_id, @group.id %>
    </div>
    <div class="form-actions">
      <%= submit_tag "Add Members", class: "w-full inline-flex justify-center items-center px-3 py-2 text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>