<%= render 'admin/dashboard/nav' %>

<div class="p-6">
  <div class="space-y-8">
    <!-- Overview Section -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Overview</h2>

      <!-- Key Metrics -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <!-- First row -->
        <div class="bg-gray-50 rounded-lg p-6 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Active Users (24h)
          </h3>
          <p class="mt-2 text-2xl font-bold text-gray-900"><%= @stats[:active_users_today] || 0 %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-6 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Pages Per Visit
          </h3>
          <p class="mt-2 text-2xl font-bold text-gray-900"><%= @stats[:page_views_per_visit] || '0' %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-6 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
            Signups This Week
          </h3>
          <p class="mt-2 text-2xl font-bold text-gray-900"><%= @stats[:signups_this_week] || 0 %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-6 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            New Visitors
          </h3>
          <p class="mt-2 text-2xl font-bold text-gray-900"><%= @stats[:new_visitors_percentage] %></p>
        </div>

        <!-- Second row -->
        <div class="bg-gray-50 rounded-lg p-6 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Top Browser
          </h3>
          <p class="mt-2 text-xl font-bold text-gray-900"><%= @stats[:top_browser] %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-6 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
            Top Device
          </h3>
          <p class="mt-2 text-xl font-bold text-gray-900"><%= @stats[:top_device_type] %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-6 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Events Per Day
          </h3>
          <p class="mt-2 text-2xl font-bold text-gray-900"><%= @stats[:events_per_day] %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-6 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Most Active Hour
          </h3>
          <p class="mt-2 text-2xl font-bold text-gray-900"><%= @stats[:most_active_hour] %></p>
        </div>
      </div>

      <!-- Quick Insights -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Activity -->
        <div class="bg-white border rounded-lg shadow-sm">
          <div class="px-4 py-3 border-b">
            <h3 class="text-lg font-medium text-gray-700">Recent Activity</h3>
          </div>
          <div class="p-4">
            <%= line_chart admin_dashboard_daily_visits_data_path,
                colors: ["#4F46E5"],
                suffix: " visits",
                points: false,
                loading: "Loading visits...",
                height: "200px",
                library: {
                  scales: {
                    y: { beginAtZero: true }
                  }
                } %>
          </div>
        </div>

        <!-- Top Events -->
        <div class="bg-white border rounded-lg shadow-sm">
          <div class="px-4 py-3 border-b">
            <h3 class="text-lg font-medium text-gray-700">Top Events</h3>
          </div>
          <div class="p-4">
            <%= bar_chart admin_dashboard_events_data_path,
                colors: ["#4F46E5"],
                suffix: " occurrences",
                loading: "Loading events...",
                height: "200px" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Events Preview -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-800">Recent Events</h2>
        <%= link_to "View All Events →", admin_dashboard_events_path, class: "text-indigo-600 hover:text-indigo-800" %>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="py-3 text-left text-sm font-medium text-gray-500">Event</th>
              <th class="py-3 text-left text-sm font-medium text-gray-500">User</th>
              <th class="py-3 text-left text-sm font-medium text-gray-500">Time</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% if @stats[:recent_events].present? %>
              <% @stats[:recent_events].take(5).each do |event| %>
                <tr class="hover:bg-gray-50">
                  <td class="py-3 text-sm text-gray-900"><%= event[:name] %></td>
                  <td class="py-3 text-sm text-gray-600"><%= event[:user] %></td>
                  <td class="py-3 text-sm text-gray-500">
                    <%= event[:time].strftime("%Y-%m-%d %H:%M") %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="3" class="py-3 text-sm text-gray-500 text-center">No recent events</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Active Users Preview -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-800">Active Users</h2>
        <%= link_to "View All Users →", admin_dashboard_users_path, class: "text-indigo-600 hover:text-indigo-800" %>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <% if @stats[:most_common_user_actions].present? %>
          <% @stats[:most_common_user_actions].take(4).each do |action, count| %>
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="text-sm font-medium text-gray-600"><%= action %></div>
              <div class="mt-2 text-2xl font-bold text-indigo-600"><%= count %></div>
            </div>
          <% end %>
        <% else %>
          <div class="col-span-full text-center py-4 text-gray-500">
            No user actions recorded
          </div>
        <% end %>
      </div>
    </div>

    <!-- Groups Overview -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-800">Groups Overview</h2>
        <%= link_to "View All Groups →", admin_dashboard_groups_path, class: "text-indigo-600 hover:text-indigo-800" %>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <div class="bg-gray-50 rounded-lg p-4 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            Total Groups
          </h3>
          <p class="mt-2 text-2xl font-bold text-gray-900"><%= Group.count %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Active Groups
          </h3>
          <p class="mt-2 text-2xl font-bold text-gray-900"><%= Group.where('last_activity_at >= ?', 30.days.ago).count %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Avg Members
          </h3>
          <p class="mt-2 text-2xl font-bold text-gray-900"><%= (Group.joins(:memberships).group('groups.id').count.values.sum.to_f / [Group.count, 1].max).round(1) %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4 text-center">
          <h3 class="text-sm font-medium text-gray-600 flex items-center justify-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            New This Month
          </h3>
          <p class="mt-2 text-2xl font-bold text-gray-900"><%= Group.where('created_at >= ?', 30.days.ago).count %></p>
        </div>
      </div>

      <!-- Recent Groups Preview -->
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="py-3 text-left text-sm font-medium text-gray-500">Group Name</th>
              <th class="py-3 text-left text-sm font-medium text-gray-500">Owner</th>
              <th class="py-3 text-left text-sm font-medium text-gray-500">Members</th>
              <th class="py-3 text-left text-sm font-medium text-gray-500">Created</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% recent_groups = Group.order(created_at: :desc).limit(5) %>
            <% if recent_groups.present? %>
              <% recent_groups.each do |group| %>
                <tr class="hover:bg-gray-50">
                  <td class="py-3 text-sm text-gray-900">
                    <%= link_to group.name, admin_group_details_path(id: group.id), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="py-3 text-sm text-gray-600">
                    <% if group.leader.present? %>
                      <%= group.leader.email %>
                    <% else %>
                      <span class="text-gray-500">N/A</span>
                    <% end %>
                  </td>
                  <td class="py-3 text-sm text-gray-600"><%= group.memberships.count %></td>
                  <td class="py-3 text-sm text-gray-500">
                    <%= group.created_at.strftime("%Y-%m-%d") %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="4" class="py-3 text-sm text-gray-500 text-center">No groups created yet</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>