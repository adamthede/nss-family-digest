<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification class: "bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" %>

  <div class="space-y-4">
    <div class="form-inputs">
      <%= f.input :question, as: :text, input_html: { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Add Question", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>