<% content_for :title, @group.name %>

<div class="container mx-auto px-4 py-8">
  <% if notice.present? %>
    <div id="notice" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-6">
    <h2 class="text-2xl font-bold mb-1">Group Name</h2>
    <h3 class="text-xl mb-4"><%= @group.name %></h3>
    <% if current_user == @group.leader %>
      <%= link_to 'Edit Group Name', edit_group_path(@group), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="col-span-1">
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-bold mb-4">Members</h2>
        <div class="space-y-3">
          <% @group.users.each do |user| %>
            <div class="flex items-center bg-gray-50 p-3 rounded-lg">
              <% if user.profile_image_url(:thumb) %>
                <%= image_tag user.profile_image_url(:thumb).to_s, class: "h-10 w-10 rounded-full" %>
              <% else %>
                <%= image_tag user.gravatar_url, class: "h-10 w-10 rounded-full" %>
              <% end %>
              <div class="ml-4 flex items-center">
                <% if user == @group.leader %>
                  <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full mr-2">Leader</span>
                <% end %>
                <span class="text-gray-700"><%= user.email %></span>
              </div>
            </div>
          <% end %>
        </div>

        <% if current_user == @group.leader %>
          <div class="mt-8">
            <h4 class="text-lg font-semibold mb-4">Add Members to this Group</h4>
            <%= form_tag('/invite', method: 'post', class: "space-y-4") do %>
              <div class="form-inputs">
                <%= label_tag :emails, "Enter emails, separated by commas:", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= text_area_tag :emails, nil, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50", rows: 3 %>
                <%= hidden_field_tag :group_id, @group.id %>
              </div>
              <div class="form-actions">
                <%= submit_tag "Add Members", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-span-2">
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex flex-col mb-6">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-3">
              <h2 class="text-xl font-bold">Q&A Digests</h2>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                <%= pluralize(@question_records.count, 'digest') %>
              </span>
            </div>
          </div>

          <div class="flex items-center space-x-2 text-sm">
            <span class="text-gray-500">Sort by:</span>
            <div class="flex items-center space-x-4 border-l pl-4 ml-2">
              <%= link_to 'Newest', group_path(@group, sort: 'date_desc'),
                  class: "text-indigo-600 hover:text-indigo-900 #{params[:sort] == 'date_desc' || params[:sort].nil? ? 'font-semibold underline' : ''}" %>
              <%= link_to 'Oldest', group_path(@group, sort: 'date_asc'),
                  class: "text-indigo-600 hover:text-indigo-900 #{params[:sort] == 'date_asc' ? 'font-semibold underline' : ''}" %>
              <%= link_to 'Most Answers', group_path(@group, sort: 'answers_desc'),
                  class: "text-indigo-600 hover:text-indigo-900 #{params[:sort] == 'answers_desc' ? 'font-semibold underline' : ''}" %>
              <%= link_to 'Least Answers', group_path(@group, sort: 'answers_asc'),
                  class: "text-indigo-600 hover:text-indigo-900 #{params[:sort] == 'answers_asc' ? 'font-semibold underline' : ''}" %>
            </div>
          </div>
        </div>

        <% if current_user == @group.leader %>
          <%= form_tag('/send_random', method: 'post', class: "mb-6") do %>
            <%= hidden_field_tag :group_id, @group.id %>
            <%= submit_tag 'Send Random Question', class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <% end %>
        <% end %>

        <div class="overflow-x-auto ring-1 ring-gray-300 rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @question_records.each do |record| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 text-sm text-gray-900"><%= @questions[record.question_id].question %></td>
                  <% if record.created_at %>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= record.created_at.strftime("%B %d, %Y") %></td>
                  <% end %>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% answer_count = @answer_counts[record.id] || 0 %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= answer_count > 0 ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= pluralize(answer_count, 'answer') %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to 'View Digest', question_record_path(record.id), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <% if current_user == @group.leader %>
    <div class="mt-8 border-t pt-8">
      <%= button_to 'Delete This Group',
          group_path(@group),
          method: :delete,
          class: "px-4 py-2 bg-red-600 text-white font-medium rounded-md hover:bg-red-700 transition-colors",
          form: { data: { turbo_confirm: 'Are you sure?' } } %>
    </div>
  <% end %>
</div>