%html
  %head
    :css
      @import url('http://fonts.googleapis.com/css?family=Montserrat');
      body {
        background: -webkit-linear-gradient(-45deg, #b8e1fc 0%,#a9d2f3 10%,#90bae4 25%,#90bcea 37%,#90bff0 50%,#6ba8e5 51%,#a2daf5 83%,#bdf3fd 100%);
        text-shadow: 1px 1px 1px #fff;
        font-family: 'Montserrat', sans-serif;
      }
      #message_headers {
        font-size: 0.8em;
        margin: 1em auto;
        width: 80%;
        background-color: rgba(255,255,255,.3);
        border-radius: 2em;
        color: black;
      }
      #container{
        width: 80%;
        margin: 1em auto;
      }
      #wrapper {
        padding: 30px 0px 0px 0px;
        margin: 40px auto;
        width: 80%;
        background-color: rgba(0, 0, 0, .1);
        border-radius: 2em;
      }
      #wrapper h1 {
        text-align: center;
        padding: 20px 0px 0px 0px;
      }
      #wrapper p {
        max-width: 500px;
        text-align: center;
        margin: auto;
        padding: 0px 0px 40px 0px;
        font-size: 22px;
      }
      #footer {
        text-align: center;
        margin: 1em auto;
        width: 80%;
        color: white;
        text-shadow: 1px 1px 1px #000;
      }
      #footer h1 {
        display: inline;
      }
      #footer p {
        padding: 1em;
        display: inline-flex;
      }
  %body
    #wrapper
      = yield
