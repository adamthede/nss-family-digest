<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li>
          <div>
            <%= link_to "Groups", groups_path, class: "text-gray-400 hover:text-gray-500" %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
            </svg>
            <%= link_to @group.name, group_path(@group), class: "ml-4 text-gray-400 hover:text-gray-500" %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
            </svg>
            <span class="ml-4 text-gray-500" aria-current="page">Digests</span>
          </div>
        </li>
      </ol>
    </nav>
  </div>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Question Digests for <%= @group.name %></h1>
    <% if current_user == @group.leader %>
      <%= link_to new_group_question_digest_path(@group), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Create New Digest
      <% end %>
    <% end %>
  </div>

  <% if @digests.empty? %>
    <div class="bg-white p-8 rounded-lg border border-gray-200 text-center">
      <div class="flex flex-col items-center">
        <div class="h-16 w-16 rounded-full bg-indigo-100 flex items-center justify-center mb-4">
          <svg class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No digests yet</h3>
        <p class="text-gray-500 mb-6">No digests have been created for this group yet.</p>
        <% if current_user == @group.leader %>
          <%= link_to new_group_question_digest_path(@group),
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Create Your First Digest
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="space-y-4">
      <% @digests.each do |digest| %>
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow duration-200">
          <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 px-5 py-3">
            <div class="flex items-center justify-between">
              <h4 class="text-lg font-medium text-white">
                Week of <%= digest.start_date.strftime("%B %d, %Y") %>
              </h4>
              <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full
                <%= case digest.status
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    when 'processing' then 'bg-blue-100 text-blue-800'
                    when 'sent' then 'bg-green-100 text-green-800'
                    when 'failed' then 'bg-red-100 text-red-800'
                    end %>">
                <%= digest.status.capitalize %>
              </span>
            </div>
          </div>

          <div class="p-5">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
              <div>
                <div class="flex items-center space-x-3">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                      <svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500">
                      <%= digest.start_date.strftime("%b %d") %> - <%= digest.end_date.strftime("%b %d, %Y") %>
                    </p>
                    <div class="flex items-center mt-1 space-x-3">
                      <span class="text-sm font-medium text-gray-900">
                        <%= pluralize(digest.question_records.count, 'question') %>
                      </span>
                      <span class="text-sm font-medium text-gray-900">
                        <%= pluralize(digest.question_records.map { |qr| qr.answers.count }.sum, 'answer') %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex items-center space-x-3">
                <% if digest.sent? && digest.sent_at %>
                  <span class="text-sm text-gray-500">
                    Sent <%= time_ago_in_words(digest.sent_at) %> ago
                  </span>
                <% elsif digest.created_at %>
                  <span class="text-sm text-gray-500">
                    Created <%= time_ago_in_words(digest.created_at) %> ago
                  </span>
                <% end %>

                <div class="flex space-x-2">
                  <%= link_to group_question_digest_path(@group, digest),
                      class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" do %>
                    <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    View Digest
                  <% end %>

                  <% if current_user == @group.leader && digest.pending? %>
                    <%= button_to send_digest_group_question_digest_path(@group, digest),
                        class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
                      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                      Send Digest
                    <% end %>
                  <% end %>

                  <% if current_user == @group.leader %>
                    <%= button_to group_question_digest_path(@group, digest),
                        method: :delete,
                        class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700",
                        form: { data: { turbo_confirm: "Are you sure you want to delete this digest?" } } do %>
                      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                      Delete
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to group_path(@group), class: "inline-flex items-center text-indigo-600 hover:text-indigo-900" do %>
      <svg class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Group
    <% end %>
  </div>
</div>