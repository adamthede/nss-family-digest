<% content_for :title, @group.name %>

<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-4 py-6 sm:py-8 max-w-7xl">
    <!-- Header Section -->
    <%= render 'header' %>

    <!-- Main Content Layout -->
    <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 md:gap-8">
      <!-- Members Section (Always Visible) -->
      <div class="sm:w-48 md:w-56 lg:w-64 sm:flex-shrink-0 mb-4 sm:mb-0">
        <%= render 'members' %>
      </div>

      <!-- Main Content Area with Tabs -->
      <div class="flex-1">
        <div class="bg-white shadow-sm rounded-xl overflow-hidden">
          <!-- Tab Navigation -->
          <%= render 'tab_navigation' %>

          <!-- Tab Content -->
          <div class="p-4 sm:p-6 md:p-8">
            <% if controller.action_name == 'questions' %>
              <%= render 'questions' %>
            <% else %>
              <%= render 'digests' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Delete Group Button (for leader) -->
    <% if current_user == @group.leader %>
      <div class="mt-6 flex justify-end">
        <%= button_to "Delete Group", group_path(@group), method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", form: { data: { turbo_confirm: "Are you sure you want to delete this group? This action cannot be undone." } } %>
      </div>
    <% end %>
  </div>
</div>