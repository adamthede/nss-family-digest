<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-500 to-indigo-600 px-8 py-6">
      <h1 class="text-2xl font-bold text-white">Edit Profile</h1>
      <p class="text-indigo-100 mt-2">Update your profile information</p>
    </div>

    <!-- Form Section -->
    <div class="p-8">
      <%= render 'form' %>

      <!-- Navigation Links -->
      <div class="mt-8 mb-4 flex items-center space-x-4">
        <%= link_to user_path(current_user),
            class: "text-indigo-600 hover:text-indigo-800 px-4 py-2 rounded-md text-sm font-medium transition-colors duration-200" do %>
          <i class="fas fa-arrow-left mr-1"></i>
          Back to Profile
        <% end %>

        <%= link_to user_path(current_user),
            class: "bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-indigo-700 transition-colors duration-200" do %>
          <i class="fas fa-eye mr-1"></i>
          View Profile
        <% end %>
      </div>
    </div>
  </div>
</div>