.container.mx-auto.px-4.py-8
  #notice.bg-green-100.border.border-green-400.text-green-700.px-4.py-3.rounded.relative= notice

  .bg-white.shadow.rounded-lg.p-6.mb-6
    %h2.text-xl.font-bold.mb-2 Question
    %p.text-gray-700.text-lg= @question.question

  .space-x-4
    = link_to 'Edit', edit_question_path(@question), class: "text-blue-600 hover:text-blue-800"
    = link_to 'Back', questions_path, class: "text-blue-600 hover:text-blue-800"
